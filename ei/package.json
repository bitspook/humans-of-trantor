{
  "name": "@trantor/hot-event-injector",
  "version": "0.1.0",
  "description": "HoT Event Injector Service",
  "main": "dist/index.js",
  "repository": "https://git.trantorinc.com/channikhabra/humans-of-trantor/",
  "author": "Charanjit Singh (charanjit.singh@trantorinc.com)",
  "license": "GPLv2",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "node ./dist",
    "lint": "tslint --project .",
    "watch": "run-s build start",
    "test": "ava",
    "fmt": "prettier-tslint fix 'src/**/*.ts'",
    "start:dev": "NODE_ENV=development nodemon"
  },
  "_moduleAliases": {
    "@src": "dist"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ignore": [
      "**/flycheck*.ts"
    ],
    "ext": "ts",
    "exec": "run-p -c lint watch",
    "delay": 800
  },
  "ava": {
    "files": [
      "src/**/*.test.ts"
    ],
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "module-alias/register",
      "ts-node/register"
    ]
  },
  "dependencies": {
    "@types/slonik": "^18.6.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "express-promise-router": "^3.0.3",
    "module-alias": "^2.2.1",
    "slonik": "^18.11.1",
    "yarn": "^1.17.3",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.17.0",
    "@types/express-promise-router": "^2.0.1",
    "@types/supertest": "^2.0.8",
    "@types/yup": "^0.26.22",
    "ava": "^2.2.0",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "prettier-tslint": "^0.4.2",
    "supertest": "^4.0.2",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.18.0",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.5.3"
  }
}
